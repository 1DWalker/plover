# Maintainer: Benoit Pierre <benoit.pierre@gmail.com>

pkgname=plover
pkgdesc="Free and open source real-time stenography engine."
pkgver=4.0.0.dev0
pkgrel=1
arch=('any')
license=('GPL2')
depends=(
  'python'
  'python-appdirs'
  'python-dbus'
  'python-hidapi'
  'python-pyqt5'
  'python-pyserial'
  'python-setuptools'
  'python-six'
  'python-xlib'
  'wmctrl'
)
makedepends=(
  'python-babel'
  'python-mock'
  'python-pytest'
  'python-setuptools-scm'
)
provides=('plover')
conflicts=('plover-git')
url="http://www.openstenoproject.org/plover/"
source=(https://github.com/openstenoproject/plover/archive/v$pkgver.tar.gz)
sha1sums=(89ca6af3fe002be218158930d105d25c1e1282be)

prepare() {
  cd "$pkgname-$pkgver"
}

check() {
  cd "$pkgname-$pkgver"
  python setup.py test
}

package() {
  cd "$pkgname-$pkgver"
  python setup.py install --root="$pkgdir"
  chmod og+rX -R "$pkgdir"
}

